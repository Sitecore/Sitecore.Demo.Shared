<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
    <RelativePathForm>
        <FormDialog Icon="Network/32x32/mail.png" Header="Insert a relative link" Text="Please specify the relative URL and any additional properties." OKButton="OK">

            <CodeBeside Type="Sitecore.Demo.Foundation.SitecoreExtensions.Controls.RelativePathForm,Sitecore.Demo.Foundation.SitecoreExtensions"/>

            <a id="relativepath"></a>
            
            <GridPanel Class="scFormTable" CellPadding="2" Columns="2" Width="100%">
                <Label For="Text" GridPanel.NoWrap="true">
                    <Literal Text="Link description:"/>
                </Label>
                <Edit ID="Text" Width="100%" GridPanel.Width="100%"/>

                <Label For="Url" GridPanel.NoWrap="true">
                    <Literal Text="Relative Url"/>
                </Label>
                <Edit ID="Url" Width="100%" />

                <Label For="Class" GridPanel.NoWrap="true">
                    <Literal Text="Style class:" />
                </Label>
                <Edit ID="Class" Width="100%" />

                <Label for="Title" GridPanel.NoWrap="true">
                    <Literal Text="Alternate text:"/>
                </Label>
                <Edit ID="Title" Width="100%" />
            </GridPanel>
        </FormDialog>
    </RelativePathForm>
</control>