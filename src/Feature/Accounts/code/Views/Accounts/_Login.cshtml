@using System.Web.Mvc.Html
@using Sitecore.Demo.Shared.Feature.Accounts
@using Sitecore.Demo.Shared.Feature.Accounts.Services
@using Sitecore.Demo.Shared.Foundation.Dictionary.Extensions
@using Sitecore.Demo.Shared.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc
@model Sitecore.Demo.Shared.Feature.Accounts.Models.LoginInfo
<div class="login-body">
    @Html.ValidationMessage("invalidCredentials", new {@class = "alert alert-danger"}, "div")
    <div class="form-group @Html.ValidationErrorFor(x => x.Email, "has-error")">
        @Html.LabelFor(x => x.Email, new
        {
            @class = "control-label",
            @for = "popupLoginEmail"
        })
        @Html.TextBoxFor(x => x.Email, new
        {
            @class = "form-control",
            id = "popupLoginEmail"
        })
        @Html.ValidationMessageFor(x => x.Email, "", new
        {
            @class = "help-block"
        }, "p")
    </div>
    <div class="form-group @Html.ValidationErrorFor(x => x.Password, "has-error")">
        @Html.LabelFor(x => x.Password, new
        {
            @class = "control-label",
            @for = "popupLoginPassword"
        })
        @Html.PasswordFor(x => x.Password, new
        {
            @class = "form-control",
            id = "popupLoginPassword"
        })
        @Html.ValidationMessageFor(x => x.Password, "", new
        {
            @class = "help-block"
        }, "p")
    </div>
    <button type="button" class="btn btn-block btn-primary" onclick="login('loginModal')">@Html.Sitecore().DictionaryField("/Accounts/Login/Login", "Login")</button>
    <a class="btn btn-block btn-default" href="@AccountsSettingsService.Instance.GetPageLinkOrDefault(Sitecore.Context.Item, Templates.AccountsSettings.Fields.ForgotPasswordPage)">@Html.Sitecore().DictionaryField("/Accounts/Login/Forgot Your Password", "Forgot your password?")</a>
    <a class="btn btn-block btn-default" href="@AccountsSettingsService.Instance.GetPageLinkOrDefault(Sitecore.Context.Item, Templates.AccountsSettings.Fields.RegisterPage)">@Html.Sitecore().DictionaryField("/Accounts/Login/Register", "Register")</a>
</div>