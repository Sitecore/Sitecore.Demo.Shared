@using Sitecore.Demo.Foundation.Dictionary.Extensions
@model Sitecore.Demo.Feature.Demo.Models.ExperienceData

<div class="panel-group" id="experiencedata">
    @if (!Model.IsActive)
    {
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="fa fa-warning"></span>
                    @Html.Sitecore().DictionaryField("/Demo/Experience Content/No Active", "Tracking is not active!")
                </h3>
            </div>
        </div>
    }
    @if (!Sitecore.Context.PageMode.IsExperienceEditor)
    {
        @Html.Partial("_Visits", Model.Visits)
        @Html.Partial("_PersonalInformation", Model.PersonalInfo)
        @Html.Partial("_OnsiteBehavior", Model.OnsiteBehavior)
        @Html.Partial("_Referral", Model.Referral)
    }
</div>
