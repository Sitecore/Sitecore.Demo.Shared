<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <PackageSourceFolder Include="$(MSBuildThisFileDirectory)..\..\yml" />
  </ItemGroup>

  <Target Name="AfterBuild">
    <Message Importance="high" Text="Collecting Package Yml Files"/>
    <CallTarget Targets="CopyPackageYmlFiles"/>
  </Target>

  <Target Name="CopyPackageYmlFiles">

    <ItemGroup>
      <PackageReferenceSerializationFiles
        Include="%(PackageSourceFolder.Identity)\**\*.yml" />

      <SerializationGitIgnoreFile Include="%(PackageSourceFolder.Identity)\**\.gitignore" />
    </ItemGroup>
    <Copy
      SourceFiles="@(PackageReferenceSerializationFiles)"
      DestinationFiles="@(PackageReferenceSerializationFiles->'$(SolutionDir)\items\s\%(RecursiveDir)%(Filename)%(Extension)'-> Replace('serialization\','')-> Replace('Foundation\','fo\')-> Replace('Feature\','fe\')-> Replace('Project\','p\'))"
    />
    <Copy
      SourceFiles="@(SerializationGitIgnoreFile)"
      DestinationFiles="@(SerializationGitIgnoreFile->'$(SolutionDir)\items\s\%(RecursiveDir)%(Filename)%(Extension)'-> Replace('serialization\','')-> Replace('Foundation\','fo\')-> Replace('Feature\','fe\')-> Replace('Project\','p\'))"
    />
  </Target>

</Project>