<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="AfterBuild">
    <Message Importance="high" Text="Collecting Package Yml Files"/>
    <CallTarget Targets="CopyPackageYmlFiles"/>
  </Target>

  <Target Name="CopyPackageYmlFiles">
    <PropertyGroup>
      <CopySourceFolder>$(MSBuildThisFileDirectory)..\..\yml</CopySourceFolder>
    </PropertyGroup>
    
    <Message Importance="high" Text="Source folder: $(CopySourceFolder)" />
    
    <ItemGroup>
      <PackageReferenceSerializationFiles
        Include="$(CopySourceFolder)\**\*.*" />
    </ItemGroup>
    
    <Copy
      SourceFiles="@(PackageReferenceSerializationFiles)"
      DestinationFiles="@(PackageReferenceSerializationFiles->'$(ProjectDir)\..\..\..\%(RecursiveDir)%(Filename)%(Extension)')"
    />
  </Target>


</Project>